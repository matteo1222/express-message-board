extends layout

block content
  h1= title
  p Welcome to #{title}
  ul
    each val in messages
      li
        h4= val.user + ':'
        p= val.text
        p= val.added

  h1 New Message
  form(method="POST" action="/")
    label(for="name") Name
    input(type="text" id="name" name="name")
    label(for="message") Message
    input(type="text" id="message" name="message")
    button(type="submit") Submit
